@inject MvcHelper MvcHelper
@{
    Layout = "Layouts/Empty";
}

@section Head {
    @RenderSection("Head", required: false)
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">MvcSample</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbarContent" aria-controls="mainNavbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="mainNavbarContent" class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @MvcHelper.ActiveMenuItem(ViewData, "Home")"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item @MvcHelper.ActiveMenuItem(ViewData, "About")"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About" asp-route-culture="vi">About</a></li>
                <li class="nav-item @MvcHelper.ActiveMenuItem(ViewData, "Contact")"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; 2017 - RazorPagesSample</p>
    </footer>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
